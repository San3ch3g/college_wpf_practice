<Window x:Class="pracrica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pracrica"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Меню -->
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Категория" Click="Category_Click"/>
            <MenuItem Header="Продукция" Click="Product_Click"/>
            <MenuItem Header="Платежи" Click="Payment_Click"/>
        </Menu>

        <!-- Кнопки "Войти" и "Зарегистрироваться" -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Button Content="Войти" Width="120" Height="30" Click="Login_Click" Margin="20"/>
            <Button Content="Зарегистрироваться" Width="120" Height="30" Click="Register_Click" Margin="20"/>
        </StackPanel>
    </Grid>
</Window>
